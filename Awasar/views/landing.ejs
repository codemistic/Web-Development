                    <div class="form-group"><input type="password" class="large_font form-control my-2 mx-auto inp"
                            name="password" placeholder="Password" required></div><button type="submit"
                        class="btn btn-primary signIn large_font">Login</button>
                    <div class="text-center">
                        <hr />
                        <h5 class="small_font">Don't have an account?</h5><button
                            class="btn btn-success signIn large_font"><a href="/register"
                                class="register text-light">Register</a></button>
                        <hr>
                        <h5>Or</h5>
                        <div class="gsign"><a href="/auth/google" class="google mx-2 text-danger large_font"><i
                                    class="bi bi-google"></i> Sign In with Google </a></div>
                    </div>
            </div>
        </div>
    </div>
