<div class="all_jobs_body"><%- include('partials/header') %><div id="all-jobs" class="container mt-3 py-5" style="background-color: transparent" ><h2 class="ms-3">Search Form</h2><form action="/all-jobs" method="post" class="row gy-2 gx-3 mt-3 ms-2"><div class="col-6"><label for="status">Status</label ><select class="form-select" name="status" id="status"><% if(filled.status=='All'){ %><option value="All" selected>All</option><%} else{ %><option value="All">All</option><%} %><% if(filled.status=='Pending'){ %><option value="Pending" selected>Pending</option><%} else{ %><option value="Pending">Pending</option><%} %><% if(filled.status=='Online-Assessment'){ %><option value="Online-Assessment" selected>Online Assessment</option><%} else{ %><option value="Online-Assessment">Online Assessment</option><%} %><% if(filled.status=='Interview'){ %><option value="Interview" selected>Interview</option><%} else{ %><option value="Interview">Interview</option><%} %><% if(filled.status=='Offered'){ %><option value="Offered" selected>Offered</option><%} else{ %><option value="Offered">Offered</option><%} %><% if(filled.status=='Declined'){ %><option value="Declined" selected>Declined</option><%} else{ %><option value="Declined">Declined</option><%} %></select></div><div class="col-6"><label for="job-type">Job-Type</label ><select class="form-select" name="jobType" id="job-type"><% if(filled.jobType=='All'){ %><option value="All" selected>All</option><%} else{ %><option value="All">All</option><%} %><% if(filled.jobType=='Full-Time'){ %><option value="Full-Time" selected>Full-Time</option><%} else{ %><option value="Full-Time">Full-Time</option><%} %><% if(filled.jobType=='Internship'){ %><option value="Internship" selected>Internship</option><%} else{ %><option value="Internship">Internship</option><%} %><% if(filled.jobType=='Remote'){ %><option value="Remote" selected>Remote</option><%} else{ %><option value="Remote">Remote</option><%} %><% if(filled.jobType=='Part-Time'){ %><option value="Part-Time" selected>Part-Time</option><%} else{ %><option value="Part-Time">Part-Time</option><%} %><% if(filled.jobType=='Contract'){ %><option value="Contract" selected>Contract</option><%} else{ %><option value="Contract">Contract</option><%} %></select></div><div class="col-12"><button type="submit" class="btn btn-primary">Search</button></div></form></div><div id="all-jobs" class="container mt-3 py-5" style="background-color: transparent" ><h2 class="ms-3 text-center"><%=totalJobs %> Jobs Found!</h2><div class="container"><div class="row justify-content-center"><% allJobs.forEach(job=>{ %><div class="job-card col-md-5"><div class="row mt-4"><div class="col-2"><div class="company-logo text-center"><div class="pt-1" style="margin-right: 5px"><%=job.company.substr(0, 1) %></div></div></div><div class="col-6 mt-2" style="margin-left: 7px"><h5 class="position my-0"><%=job.position %></h5><h5 class="company my-0 text-muted"><%=job.company %></h5></div></div><hr /><div class="row mt-2"><div class="col-5"><h6><i class="bi bi-geo-alt-fill me-3"></i><%=job.jobLocation %></h6></div><div class="col-5"><h6><i class="bi bi-calendar3 me-3"></i><%=job.date %></h6></div></div><div class="row mt-2"><div class="col-5"><h6><i class="bi bi-briefcase-fill me-3"></i><%=job.jobType %></h6></div><div class="col-5"><h6 class="<%=job.status %>rounded-2 d-inline px-2"><%=job.status %></h6></div></div><div class="my-2"><button class="btn btn-warning edit" style="margin-right: 8px"><a href="/edit/<%=job._id %>">Edit</a></button ><button class="btn btn-danger delete" style="margin-left: 8px"><a href="/delete/<%=job._id %>">Delete</a></button></div></div><%}); %></div></div></div><%- include('partials/footer') %></div>